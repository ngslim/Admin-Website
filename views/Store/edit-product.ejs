<link
  href="public/assets/libs/select2/css/select2.min.css"
  rel="stylesheet"
  type="text/css"
/>

<!-- dropzone css -->
<link
  href="public/assets/libs/dropzone/min/dropzone.min.css"
  rel="stylesheet"
  type="text/css"
